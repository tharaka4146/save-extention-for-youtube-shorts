{
    "name": "Better YouTube Shorts",
    "description": "Playback and volume controls (with J, L, M, - and +) and timestamp on YouTube Shorts.",
    "version": "1.2.1",
    "manifest_version": 3,
    "content_scripts": [
        {
            "matches": [
                "https://*.youtube.com/*"
            ],
            "js": [
                "content-script.js",
                "index.js"
            ],
            "css": [
                "styles.css"
            ]
        }
    ],
    "icons": {
        "16": "icons/byts16.png",
        "32": "icons/byts32.png",
        "48": "icons/byts48.png",
        "128": "icons/byts128.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_title": "My YT Bookmarks",
        "default_popup": "popup.html"
    },
    "permissions": [
        "storage",
        "scripting",
        "tabs",
        "activeTab",
        "tabGroups"
    ],
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ]
}